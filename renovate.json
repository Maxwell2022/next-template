{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate dependency rules configuration",
  "extends": [
    "config:recommended",
    ":automergeAll",
    ":automergeRequireAllStatusChecks",
    ":automergePr",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":timezone(Australia/Sydney)",
    "schedule:earlyMondays"
  ],
  "updateNotScheduled": false,
  "minimumReleaseAge": "5 days",
  "internalChecksFilter": "strict",
  "rangeStrategy": "bump",
  "baseBranches": ["main", "master"],
  "automergeStrategy": "squash",
  "packageRules": [
    {
      "groupName": "üöÄ dependencies (non-major)",
      "description": "Group all non-major updates into a single PR",
      "groupSlug": "all-minor-patch",
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "rollback",
        "bump"
      ]
    },
    {
      "groupName": "‚ö†Ô∏è dependencies (major) ‚ö†Ô∏è",
      "description": "Group all major updates into a single PR",
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["major"]
    },
    {
      "groupName": "‚öôÔ∏è devDependencies (non-major)",
      "description": "Group all non-major dev updates into a single PR",
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "rollback",
        "bump"
      ]
    }
  ]
}
